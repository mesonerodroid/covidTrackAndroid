<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:weightSum="1"
    android:background="@color/colorYellow"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.025">
    </TextView>
    <TextView
        android:id="@+id/country_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="COUNTRY"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:maxLength="15"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/country_newcases"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"

        android:gravity="center"
        android:text="NEW\nCASES"/>
    <TextView
        android:id="@+id/country_totalcases"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:text="TOTAL\nCASES"/>

    <TextView
        android:id="@+id/country_newdeath"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_weight="0.13"
        android:gravity="center"
        android:text="NEW\nDEATH"/>
    <TextView
        android:id="@+id/country_totaldeath"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"

        android:gravity="center"
        android:text="TOTAL\nDEATH"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.025">
    </TextView>
</LinearLayout>