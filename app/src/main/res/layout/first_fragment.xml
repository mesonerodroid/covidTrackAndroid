<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.FirstFragment">


    <ImageView
        android:id="@+id/imagemap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="13dp"
        android:adjustViewBounds="true"
        android:src="@drawable/world1"

        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <LinearLayout
        android:id="@+id/linearDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:text="Uno"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagemap"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/date_text"
                android:text=""
                android:gravity="center"
                android:textSize="26sp"
                android:textColor="@color/colorBlack"
                >

            </TextView>

            <ProgressBar
                android:id="@+id/progress_global"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                >
            </ProgressBar>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:text="Uno"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagemap">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/world_newconfirmed"
                android:layout_width="0dp"
                android:alpha="0"
                android:textStyle="bold"

                android:fontFamily="@font/ptsans"
                android:layout_height="match_parent"
                android:textColor="@color/colorBlack"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:text=""
                android:textSize="22sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:width="0dp"
                android:textColor="@color/colorDarkerGrey"
                android:gravity="center_vertical|left"
                android:paddingLeft="20dp"
                android:text="NEW CONFIRMED"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/world_totalconfirmed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:alpha="0"
                android:width="0dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/ptsans"
                android:textColor="@color/colorBlack"
                android:textSize="22sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:width="0dp"
                android:textColor="@color/colorDarkerGrey"
                android:gravity="center_vertical|left"
                android:paddingLeft="20dp"
                android:text="TOTAL CONFIRMED"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/world_newdeaths"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:width="0dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:text=""
                android:textStyle="bold"
                android:fontFamily="@font/ptsans"
                android:alpha="0"
                android:textColor="@color/colorRedDark"
                android:textSize="22sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:width="0dp"
                android:textColor="@color/colorDarkerGrey"
                android:gravity="center_vertical|left"
                android:paddingLeft="20dp"
                android:text="NEW DEATHS"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/world_totaldeaths"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:width="0dp"
                android:textStyle="bold"

                android:fontFamily="@font/ptsans"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:text=""
                android:alpha="0"
                android:textColor="@color/colorRedDark"
                android:textSize="22sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:width="0dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="20dp"
                android:textColor="@color/colorDarkerGrey"
                android:text="TOTAL DEATHS"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/world_newrecovery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:width="0dp"
                android:textStyle="bold"

                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:text=""
                android:fontFamily="@font/ptsans"
                android:alpha="0"
                android:textColor="@color/colorgreenDark"
                android:textSize="22sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:width="0dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="20dp"
                android:textColor="@color/colorDarkerGrey"
                android:text="NEW RECOVERY"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/world_totalrecovery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:textStyle="bold"
                android:width="0dp"
                android:gravity="center_vertical|right"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:text=""
                android:fontFamily="@font/ptsans"
                android:alpha="0"
                android:textColor="@color/colorgreenDark"
                android:textSize="22sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:width="0dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="20dp"
                android:text="TOTAL RECOVERY"
                android:textColor="@color/colorDarkerGrey"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15" />

    </LinearLayout>
    />


</androidx.constraintlayout.widget.ConstraintLayout>